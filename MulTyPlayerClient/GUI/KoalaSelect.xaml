<Window x:Class="MulTyPlayerClient.GUI.KoalaSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MulTyPlayerClient.GUI"
        mc:Ignorable="d"
        Title="Select Your Koala" Height="300" Width="450" ResizeMode="NoResize">

    <Grid>
        <!--Background video-->
        <MediaElement Stretch="UniformToFill" 
                      Source="pack://siteoforigin:,,,/GUI/KoalaSelectionAssets/Background.mp4"/>

        <!--Koala grid-->
        <Grid Margin="5 10 5 30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--Boonie-->
            <StackPanel Margin="6 0">
                
                <Border BorderThickness="2" 
                    BorderBrush="Black" 
                    Background="Black">
                    <Image Stretch="UniformToFill" 
                           Source="{Binding Boonie, Source={x:Static local:KoalaSelect.KoalasClass}}"
                           IsMouseDirectlyOverChanged="Boonie_IsMouseDirectlyOverChanged"/>
                </Border>
                <TextBlock Text="Boonie"/>

            </StackPanel>

            <!--Mim-->
            <StackPanel Grid.Column="1"
                        Margin="6 0">
                
                <Border BorderThickness="2" 
                        BorderBrush="Black" 
                        Background="Black">
                    <Image Stretch="UniformToFill" 
                           Source="{Binding Mim, Source={x:Static local:KoalaSelect.KoalasClass}}"
                           IsMouseDirectlyOverChanged="Mim_IsMouseDirectlyOverChanged"/>
                </Border>
                <TextBlock Text="Mim"/>
            </StackPanel>

            <!--Gummy-->
            <StackPanel Grid.Column="2"
                        Margin="6 0">
                
                <Border BorderThickness="2" 
                        BorderBrush="Black" 
                        Background="Black">
                    <Image Stretch="UniformToFill" 
                           Source="{Binding Gummy, Source={x:Static local:KoalaSelect.KoalasClass}}"
                           IsMouseDirectlyOverChanged="Gummy_IsMouseDirectlyOverChanged"/>
                </Border>
                <TextBlock Text="Gummy"/>
            </StackPanel>

            <!--Snugs-->
            <StackPanel Grid.Column="3"
                        Margin="6 0">
                
                <Border BorderThickness="2" 
                        BorderBrush="Black" 
                        Background="Black">
                    <Image Stretch="UniformToFill" 
                           Source="{Binding Snugs, Source={x:Static local:KoalaSelect.KoalasClass}}"
                           IsMouseDirectlyOverChanged="Snugs_IsMouseDirectlyOverChanged"/>
                </Border>
                <TextBlock Text="Snugs"/>
            </StackPanel>

            <!--Katie-->
            <StackPanel Grid.Row="1"
                        Margin="6 0">

                <Border BorderThickness="2" 
                        BorderBrush="Black" 
                        Background="Black">
                    <Image Stretch="UniformToFill" 
                           Source="{Binding Katie, Source={x:Static local:KoalaSelect.KoalasClass}}"
                           IsMouseDirectlyOverChanged="Katie_IsMouseDirectlyOverChanged"/>
                </Border>
                <TextBlock Text="Katie"/>
            </StackPanel>

            <!--Kiki-->
            <StackPanel Grid.Row="1"
                        Grid.Column="1"
                        Margin="6 0">

                <Border BorderThickness="2" 
                        BorderBrush="Black" 
                        Background="Black">
                    <Image Stretch="UniformToFill" 
                           Source="{Binding Kiki, Source={x:Static local:KoalaSelect.KoalasClass}}"
                           IsMouseDirectlyOverChanged="Kiki_IsMouseDirectlyOverChanged"/>
                </Border>
                <TextBlock Text="Kiki"/>
            </StackPanel>

            <!--Elizabeth-->
            <StackPanel Grid.Row="1"
                        Grid.Column="2"
                        Margin="6 0">

                <Border BorderThickness="2" 
                        BorderBrush="Black" 
                        Background="Black">
                    <Image Stretch="UniformToFill" 
                           Source="{Binding Elizabeth, Source={x:Static local:KoalaSelect.KoalasClass}}"
                           IsMouseDirectlyOverChanged="Elizabeth_IsMouseDirectlyOverChanged"/>
                </Border>
                <TextBlock Text="Elizabeth"/>
            </StackPanel>

            <!--Dubbo-->
            <StackPanel Grid.Row="1"
                        Grid.Column="3"
                        Margin="6 0">

                <Border BorderThickness="2" 
                        BorderBrush="Black" 
                        Background="Black">
                    <Image Stretch="UniformToFill" 
                           Source="{Binding Dubbo, Source={x:Static local:KoalaSelect.KoalasClass}}"
                           IsMouseDirectlyOverChanged="Dubbo_IsMouseDirectlyOverChanged"/>
                </Border>
                <TextBlock Text="Dubbo"/>
            </StackPanel>

        </Grid>

        <TextBlock Text="Select Your Koala" 
                   VerticalAlignment="Bottom"
                   Margin="0 12"/>

    </Grid>

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="TextElement.FontFamily" Value="Fonts/#SF Slapstick Comic"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="0" 
                                      Direction="315" 
                                      ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Window.Background>
        <ImageBrush ImageSource="pack://siteoforigin:,,,/GUI/KoalaSelectionAssets/Background.jpg" Stretch="UniformToFill"/>
    </Window.Background>

</Window>
