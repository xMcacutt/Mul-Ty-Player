                                <Style TargetType="Image">
                                    <Setter Property="Source" Value="{Binding Snugs, Source={x:Static local:BasicIoC.KoalaSelectViewModel}}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SnugsAvailable, Source={x:Static local:BasicIoC.KoalaSelectViewModel}}" Value="false">
                                            <Setter Property="Source" Value="pack://siteoforigin:,,,/GUI/KoalaSelectionAssets/Taken/Snugs.jpg"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                        <MediaElement Source="pack://siteoforigin:,,,/GUI/KoalaSelectionAssets/mp4/Snugs.mp4"
                                      LoadedBehavior="Manual"
                                      x:Name="SnugsME"
                                      Visibility="Collapsed"/>
                    </Grid>
                </Border>
                <TextBlock Text="Snugs"/>
            </StackPanel>

            <!--Katie-->
            <StackPanel Grid.Row="1"
                        Margin="6 0">

                <Border BorderThickness="2" 
                        BorderBrush="Black" 
                        Background="Black">
                    <Grid>
                        <Image Stretch="UniformToFill"
                               IsMouseDirectlyOverChanged="Katie_IsMouseDirectlyOverChanged"
                               MouseUp="KatieClicked"
                               IsEnabled="{Binding KatieAvailable, Source={x:Static local:BasicIoC.KoalaSelectViewModel}}">
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Setter Property="Source" Value="{Binding Katie, Source={x:Static local:BasicIoC.KoalaSelectViewModel}}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding KatieAvailable, Source={x:Static local:BasicIoC.KoalaSelectViewModel}}" Value="false">
                                            <Setter Property="Source" Value="pack://siteoforigin:,,,/GUI/KoalaSelectionAssets/Taken/Katie.jpg"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                        <MediaElement Source="pack://siteoforigin:,,,/GUI/KoalaSelectionAssets/mp4/Katie.mp4"
                                      LoadedBehavior="Manual"
                                      x:Name="KatieME"
                                      Visibility="Collapsed"/>
                    </Grid>
                </Border>
                <TextBlock Text="Katie"/>
            </StackPanel>

            <!--Kiki-->
            <StackPanel Grid.Row="1"
                        Grid.Column="1"
                        Margin="6 0">

                <Border BorderThickness="2" 
                        BorderBrush="Black" 
                        Background="Black">
                    <Grid>
                        <Image Stretch="UniformToFill"
                               IsMouseDirectlyOverChanged="Kiki_IsMouseDirectlyOverChanged"
                               MouseUp="KikiClicked"
                               IsEnabled="{Binding KikiAvailable, Source={x:Static local:BasicIoC.KoalaSelectViewModel}}">
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Setter Property="Source" Value="{Binding Kiki, Source={x:Static local:BasicIoC.KoalaSelectViewModel}}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding KikiAvailable, Source={x:Static local:BasicIoC.KoalaSelectViewModel}}" Value="false">
                                            <Setter Property="Source" Value="pack://siteoforigin:,,,/GUI/KoalaSelectionAssets/Taken/Kiki.jpg"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                        <MediaElement Source="pack://siteoforigin:,,,/GUI/KoalaSelectionAssets/mp4/Kiki.mp4"
                                      LoadedBehavior="Manual"
                                      x:Name="KikiME"
                                      Visibility="Collapsed"/>
                    </Grid>
                </Border>
                <TextBlock Text="Kiki"/>
            </StackPanel>

            <!--Elizabeth-->
            <StackPanel Grid.Row="1"
                        Grid.Column="2"
                        Margin="6 0">

                <Border BorderThickness="2" 
                        BorderBrush="Black" 
                        Background="Black">
                    <Grid>
                        <Image Stretch="UniformToFill"
                               IsMouseDirectlyOverChanged="Elizabeth_IsMouseDirectlyOverChanged"
                               MouseUp="ElizabethClicked"
                               IsEnabled="{Binding ElizabethAvailable, Source={x:Static local:BasicIoC.KoalaSelectViewModel}}">
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Setter Property="Source" Value="{Binding Elizabeth, Source={x:Static local:BasicIoC.KoalaSelectViewModel}}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElizabethAvailable, Source={x:Static local:BasicIoC.KoalaSelectViewModel}}" Value="false">
                                            <Setter Property="Source" Value="pack://siteoforigin:,,,/GUI/KoalaSelectionAssets/Taken/Elizabeth.jpg"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                        <MediaElement Source="pack://siteoforigin:,,,/GUI/KoalaSelectionAssets/mp4/Elizabeth.mp4"
                                      LoadedBehavior="Manual"
                                      x:Name="ElizabethME"
                                      Visibility="Collapsed"/>
                    </Grid>
                </Border>
                <TextBlock Text="Elizabeth"/>
            </StackPanel>

            <!--Dubbo-->
            <StackPanel Grid.Row="1"
                        Grid.Column="3"
                        Margin="6 0">

                <Border BorderThickness="2" 
                        BorderBrush="Black" 
                        Background="Black">
                    <Grid>
                        <Image Stretch="UniformToFill"
                               IsMouseDirectlyOverChanged="Dubbo_IsMouseDirectlyOverChanged"
                               MouseUp="DubboClicked"
                               IsEnabled="{Binding DubboAvailable, Source={x:Static local:BasicIoC.KoalaSelectViewModel}}">
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Setter Property="Source" Value="{Binding Dubbo, Source={x:Static local:BasicIoC.KoalaSelectViewModel}}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding DubboAvailable, Source={x:Static local:BasicIoC.KoalaSelectViewModel}}" Value="false">
                                            <Setter Property="Source" Value="pack://siteoforigin:,,,/GUI/KoalaSelectionAssets/Taken/Dubbo.jpg"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                        <MediaElement Source="pack://siteoforigin:,,,/GUI/KoalaSelectionAssets/mp4/Dubbo.mp4"
                                      LoadedBehavior="Manual"
                                      x:Name="DubboME"
                                      Visibility="Collapsed"/>
                    </Grid>
                </Border>
                <TextBlock Text="Dubbo"/>
            </StackPanel>

        </Grid>

        <TextBlock Text="Select Your Koala" 
                   VerticalAlignment="Bottom"
                   Margin="0 12"/>

        <Border Background="Transparent"
                IsHitTestVisible="{Binding BlockKoalaSelect, 
                                   Source={x:Static local:BasicIoC.KoalaSelectViewModel}}"/>

    </Grid>

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="TextElement.FontFamily" Value="Fonts/#SF Slapstick Comic"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="0" 
                                      Direction="315" 
                                      ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Window.Background>
        <ImageBrush ImageSource="pack://siteoforigin:,,,/GUI/KoalaSelectionAssets/Background.jpg" Stretch="UniformToFill"/>
    </Window.Background>

</Window>
