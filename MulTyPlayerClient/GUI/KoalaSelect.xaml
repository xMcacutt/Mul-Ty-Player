<Window x:Class="MulTyPlayerClient.GUI.KoalaSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:MulTyPlayerClient.GUI"
        mc:Ignorable="d"
        Title="Select Your Koala" Height="300" Width="450" ResizeMode="NoResize">

    <Grid>
        <!--Background video-->
        <MediaElement Stretch="UniformToFill" 
                      Source="pack://siteoforigin:,,,/GUI/KoalaSelectionAssets/Background.mp4"/>

        <!--Koala grid-->
        <Grid Margin="5 10 5 30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--Boonie-->
            <StackPanel Margin="6 0">
                
                <Border BorderThickness="2" 
                    BorderBrush="Black" 
                    Background="Black">
                    <Image Stretch="UniformToFill"
                           IsMouseDirectlyOverChanged="Boonie_IsMouseDirectlyOverChanged"
                           IsEnabled="{Binding BoonieAvailable, Source={x:Static local:BasicIoC.KoalaSelectBinding}}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseUp">
                                <i:InvokeCommandAction Command="{Binding BoonieClickCommand, Source={x:Static local:BasicIoC.KoalaSelectBinding}}"
                                                       CommandParameter="Boonie"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Source" Value="{Binding Boonie, Source={x:Static local:BasicIoC.KoalaSelectBinding}}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding BoonieAvailable, Source={x:Static local:BasicIoC.KoalaSelectBinding}}" Value="false">
                                        <Setter Property="Source" Value="pack://siteoforigin:,,,/GUI/KoalaSelectionAssets/Taken/Boonie.jpg"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                </Border>
                <TextBlock Text="Boonie"/>

            </StackPanel>

            <!--Mim-->
            <StackPanel Grid.Column="1"
                        Margin="6 0">
                
                <Border BorderThickness="2" 
                        BorderBrush="Black" 
                        Background="Black">
                    <Image Stretch="UniformToFill"
                           IsMouseDirectlyOverChanged="Mim_IsMouseDirectlyOverChanged"
                           IsEnabled="{Binding MimAvailable, Source={x:Static local:BasicIoC.KoalaSelectBinding}}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseUp">
                                <i:InvokeCommandAction Command="{Binding MimClickCommand, Source={x:Static local:BasicIoC.KoalaSelectBinding}}"
                                                       CommandParameter="Mim"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Source" Value="{Binding Mim, Source={x:Static local:BasicIoC.KoalaSelectBinding}}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding MimAvailable, Source={x:Static local:BasicIoC.KoalaSelectBinding}}" Value="false">
                                        <Setter Property="Source" Value="pack://siteoforigin:,,,/GUI/KoalaSelectionAssets/Dark/Mim.jpg"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                </Border>
                <TextBlock Text="Mim"/>
            </StackPanel>

            <!--Gummy-->
