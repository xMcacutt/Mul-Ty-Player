<Window x:Class="MulTyPlayerClient.GUI.KoalaSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MulTyPlayerClient.GUI"
        mc:Ignorable="d"
        Title="Select Your Koala" Height="300" Width="450" ResizeMode="NoResize">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.02*"/>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="0.02*"/>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="0.02*"/>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="0.02*"/>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="0.02*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.02*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.05*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.05*"/>
            <RowDefinition Height="0.04*"/>
            <RowDefinition Height="0.02*"/>
        </Grid.RowDefinitions>

        <MediaElement Stretch="UniformToFill" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="9" Grid.RowSpan="7" Source="pack://siteoforigin:,,,/GUI/KoalaSelectionAssets/Background.mp4"/>

        <Border Grid.Column="1" Grid.Row="1" BorderThickness="2" BorderBrush="Black" Background="Black">
            <MediaElement Stretch="UniformToFill" Source="pack://siteoforigin:,,,/GUI/KoalaSelectionAssets/Dark/Boonie.jpg"/>
        </Border>
        <TextBlock Grid.Row="2" Grid.Column="1" Text="Boonie">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="0" Direction="315" ShadowDepth="2"/>
            </TextBlock.Effect></TextBlock>

        <Border Grid.Column="3" Grid.Row="1" BorderThickness="2" BorderBrush="Black" Background="Black">
            <MediaElement Stretch="UniformToFill" Source="pack://siteoforigin:,,,/GUI/KoalaSelectionAssets/Dark/Mim.jpg"/>
        </Border>
        <TextBlock Grid.Row="2" Grid.Column="3" Text="Mim">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="0" Direction="315" ShadowDepth="2"/>
            </TextBlock.Effect>
        </TextBlock>

        <Border Grid.Column="5" Grid.Row="1" BorderThickness="2" BorderBrush="Black" Background="Black">
            <MediaElement Stretch="UniformToFill" Source="pack://siteoforigin:,,,/GUI/KoalaSelectionAssets/Dark/Gummy.jpg"/>
        </Border>
        <TextBlock Grid.Row="2" Grid.Column="5" Text="Gummy">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="0" Direction="315" ShadowDepth="2"/>
            </TextBlock.Effect>
        </TextBlock>

        <Border Grid.Column="7" Grid.Row="1" BorderThickness="2" BorderBrush="Black" Background="Black">
            <MediaElement Stretch="UniformToFill" Source="pack://siteoforigin:,,,/GUI/KoalaSelectionAssets/Dark/Snugs.jpg"/>
        </Border>
        <TextBlock Grid.Row="2" Grid.Column="7" Text="Snugs">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="0" Direction="315" ShadowDepth="2"/>
            </TextBlock.Effect>
        </TextBlock>

        <Border Grid.Column="1" Grid.Row="3" BorderThickness="2" BorderBrush="Black" Background="Black">
            <MediaElement Stretch="UniformToFill" Source="pack://siteoforigin:,,,/GUI/KoalaSelectionAssets/Dark/Katie.jpg"/>
        </Border>
        <TextBlock Grid.Row="4" Grid.Column="1" Text="Katie">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="0" Direction="315" ShadowDepth="2"/>
            </TextBlock.Effect>
        </TextBlock>

        <Border Grid.Column="3" Grid.Row="3" BorderThickness="2" BorderBrush="Black" Background="Black">
            <MediaElement Stretch="UniformToFill" Source="pack://siteoforigin:,,,/GUI/KoalaSelectionAssets/Dark/Kiki.jpg"/>
        </Border>
        <TextBlock Grid.Row="4" Grid.Column="3" Text="Kiki">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="0" Direction="315" ShadowDepth="2"/>
            </TextBlock.Effect>
        </TextBlock>

        <Border Grid.Column="5" Grid.Row="3" BorderThickness="2" BorderBrush="Black" Background="Black">
            <MediaElement Stretch="UniformToFill" Source="pack://siteoforigin:,,,/GUI/KoalaSelectionAssets/Dark/Elizabeth.jpg"/>
        </Border>
        <TextBlock Grid.Row="4" Grid.Column="5" Text="Elizabeth">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="0" Direction="315" ShadowDepth="2"/>
            </TextBlock.Effect>
        </TextBlock>

        <Border Grid.Column="7" Grid.Row="3" BorderThickness="2" BorderBrush="Black" Background="Black">
            <MediaElement Stretch="UniformToFill" Source="pack://siteoforigin:,,,/GUI/KoalaSelectionAssets/Dark/Dubbo.jpg"/>
        </Border>
        <TextBlock Grid.Row="4" Grid.Column="7" Text="Dubbo">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="0" Direction="315" ShadowDepth="2"/>
            </TextBlock.Effect>
        </TextBlock>

        <TextBlock Grid.Row="5" Grid.Column="3" Grid.ColumnSpan="3" Text="Select Your Koala" VerticalAlignment="Center">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="0" Direction="315" ShadowDepth="2"/>
            </TextBlock.Effect>
        </TextBlock>
    </Grid>

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="TextElement.FontFamily" Value="Fonts/#SF Slapstick Comic"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
        </Style>
    </Window.Resources>
    <Window.Background>
        <ImageBrush ImageSource="pack://siteoforigin:,,,/GUI/KoalaSelectionAssets/Background.jpg" Stretch="UniformToFill"/>
    </Window.Background>

</Window>
